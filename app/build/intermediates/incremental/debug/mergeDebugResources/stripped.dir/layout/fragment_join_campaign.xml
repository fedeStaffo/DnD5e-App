<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.campaigns.JoinCampaignFragment"
    android:id="@+id/joinCampaignFragment">

    <TextView
        android:id="@+id/textnome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:padding="16dp"
        android:textStyle="bold"
        android:text="@string/inserisci_il_nome_della_campagna"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/nomecampagnaEt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textnome"
        android:hint="@string/nome"
        android:inputType="text"
        android:textColorHint="@color/black"
        android:backgroundTint="@color/white"
        android:maxLines="1"
        android:padding="16dp" />

    <TextView
        android:id="@+id/textViewPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomecampagnaEt"
        android:layout_marginTop="50dp"
        android:padding="16dp"
        android:textStyle="bold"
        android:text="@string/inserisci_la_password"
        android:gravity="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textViewPassword"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColorHint="@color/black"
        android:backgroundTint="@color/white"
        android:maxLines="1"
        android:padding="16dp" />

    <Button
        android:id="@+id/buttonPartecipa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/black"
        android:text="@string/partecipa" />

</RelativeLayout>