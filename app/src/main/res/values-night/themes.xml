<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Progetto_DD" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E6AF2E</item> <!-- giallo ocra -->
        <item name="colorPrimaryVariant">#AD7D1E</item> <!-- tonalità più scura del giallo ocra -->
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF8000</item> <!-- arancione -->
        <item name="colorSecondaryVariant">#BF5500</item> <!-- tonalità più scura dell'arancione -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

        <!-- Personalizzazione dei colori dei testi e degli elementi UI -->
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="colorAccent">@color/black</item>
        <item name="android:textColorHint">@color/black</item>
    </style>
</resources>
