<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.campaigns.drawer.SessionDetailsFragment"
    android:orientation="vertical"
    android:background="@color/macaroon"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp">
        </Space>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/numero"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Numero"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="@string/giorno"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Giorno"
            android:layout_marginTop="20dp"
            android:textSize="28sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textAlignment="center"
            android:text=""/>

        <Button
            android:id="@+id/modifica_giorno_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Modifica giorno"
            android:backgroundTint="@color/verde"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/modifica_giorno_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Nuova data"
            android:visibility="gone"/>

        <Button
            android:id="@+id/salva_giorno_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Salva giorno"
            android:backgroundTint="@color/verde"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:text="@string/descrizione1"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Descrizione"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:textSize="28sp"
            android:text=""/>

        <Button
            android:id="@+id/modifica_descrizione_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="Modifica descrizione"
            android:backgroundTint="@color/verde"
            android:textColor="@color/white"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/modifica_descrizione_edittext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="Nuova descrizione"
            android:visibility="gone"/>

        <Button
            android:id="@+id/salva_descrizione_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:text="Salva descrizione"
            android:backgroundTint="@color/verde"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:visibility="gone"/>

        <Button
            android:id="@+id/elimina_sessione"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:text="@string/elimina"
            android:backgroundTint="@color/rosso"
            android:textColor="@color/white"
            android:textStyle="bold"/>

    </LinearLayout>
</ScrollView>
