<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homeCharacterFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.characters.HomeCharacterFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reyclerViewPers"
        android:layout_width="409dp"
        android:layout_height="729dp"
        android:layout_marginTop="16dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        app:backgroundTint="@color/orange"
        app:layout_anchor="@id/reyclerViewPers"
        app:layout_anchorGravity="bottom|right|end"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="@string/aggiungi_personaggio"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
