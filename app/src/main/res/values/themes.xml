<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Progetto_DD" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#E6AF2E</item> <!-- giallo ocra -->
        <item name="colorPrimaryVariant">#AD7D1E</item> <!-- tonalità più scura del giallo ocra -->
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#FF8000</item> <!-- arancione -->
        <item name="colorSecondaryVariant">#BF5500</item> <!-- tonalità più scura dell'arancione -->
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Progetto_DD.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Progetto_DD.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Progetto_DD.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
