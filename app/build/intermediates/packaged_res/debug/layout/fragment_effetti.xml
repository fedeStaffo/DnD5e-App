<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/macaroon"
    tools:context=".view.campaigns.drawer.EffettiFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/rosso"
        android:textStyle="bold"
        android:text="@string/status"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />


    <Space
        android:layout_width="match_parent"
        android:layout_height="50dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/quale_personaggio_vuoi_nvisualizzare"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/brune_red"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerGiocatori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/scegli_effetto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/quale_effetto_gli_vuoi_naggiungere"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/brune_red"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/spinnerEffetti"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/status"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <Button
        android:id="@+id/buttonAggiungiEffetto"
        android:layout_width="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/aggiungi" />



</LinearLayout>